<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Inicio'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultima visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>
			<!-- Show the "visited" products -->
			<%for(i = 0; i < productModel.lastVisit().length; i++ ){%>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/<%=productModel.lastVisit()[i].id%>">
						<figure class="product-box_image">
							<img src="/images/products/<%=productModel.lastVisit()[i].image%>" alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<h2><%=productModel.lastVisit()[i].price%></h2>
							<span><%=productModel.lastVisit()[i].discount%> % OFF</span>
							<p><%=productModel.lastVisit()[i].name%></p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
					
				</section>
			</div>
			<%}%>
		</div>
	</div>
	<!-- /ultima visita -->

	<!-- Ofertas -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<!-- Show the "in-sale" products -->
			<%for(i = 0; i < productModel.inSale().length; i++ ){%>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">

					<a href="/products/<%=productModel.inSale()[i].id%>">
						<figure class="product-box_image">
							<img src="/images/products/<%=productModel.inSale()[i].image%>" alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<h2><%=productModel.inSale()[i].price%></h2>
							<span><%=productModel.inSale()[i].discount%> % OFF</span>
							<p><%=productModel.inSale()[i].name%></p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
			<%}%>

		</div>
	</div>
	<!-- /Ofertas -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>