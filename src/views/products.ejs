<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Todos los productos' }) %>

	<body>
		<!-- Header -->
		<%- include('partials/headerNavbar') %>
			<!-- /Header -->

			<!-- todos los productos -->
			<div class="container products.productsList-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products.productsList-title">Todos los productos</h2>
					</div>
					<%for(i=0; i < products.productsList.length; i++){%>

						<div class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="/products/<%=products.productsList[i].id%>">
									<figure class="product-box_image">
										<img src="/images/products/<%=products.productsList[i].image%>" alt="imagen de producto">
									</figure>
									<article class="product-box_data">
										<h2>$<%=products.toThousand(products.productsList[i].price)%>
										</h2>
										<span>
											<%=products.productsList[i].discount%>% OFF
										</span>
										<p>
											<%=products.productsList[i].name%>
										</p>
										<i class="fas fa-truck"></i>
									</article>
								</a>
							</section>
						</div>
						<%}%>
				</div>
			</div>
			<!-- /todos los productos -->

			<!-- footer -->
			<%- include('partials/footer') %>
				<!-- /footer -->
	</body>

</html>